@model RegisterVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="az">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css-index/css-index.css" />
    <title>Login</title>

</head>

<body>
    <section class="area-login">
        <h1>Qeydiyyat</h1>
        <div class="login">
            <div>
                <img style="border-radius:38px" src="https://w7.pngwing.com/pngs/1/964/png-transparent-user-profile-computer-icons-login-profile-icon-police-officer-black-avatar-thumbnail.png" />
            </div>
            <form method="post" enctype="multipart/form-data">
                <input asp-for="FullName" placeholder="Ad və Soyadınız" />
                <input asp-for="UserName" placeholder="İstifadəçi adınız" />
                <input asp-for="Password" placeholder="Parolunuz" />
                <input asp-for="Image" />
                <input type="submit" value="Təsdiqlə"/>
            </form>
            <p>Hesabnız Var? <a asp-action="Login">Giriş</a></p>
        </div>
    </section>
</body>

</html>
